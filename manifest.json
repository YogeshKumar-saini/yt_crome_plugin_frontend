{
  "manifest_version": 3,
  "name": "YouTube Comment Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyze YouTube comments' sentiment using your Flask API",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
